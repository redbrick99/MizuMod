<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>Mizu_Dehydration</defName>
    <label>dehydration</label>
    <description>Extended duration without fresh water. Initial effects are mild, but prolonged lack of water can be life-threatening.</description>
    <lethalSeverity>1</lethalSeverity>
    <scenarioCanAdd>true</scenarioCanAdd>
    <stages>
      <li>
        <label>trivial</label>
        <socialFightChanceFactor>1.5</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>minor</label>
        <socialFightChanceFactor>2</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <label>moderate</label>
        <socialFightChanceFactor>2.5</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>severe</label>
        <socialFightChanceFactor>3</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.30</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>extreme</label>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    <modExtensions>
      <li Class="MizuMod.DefExtension_ThirstRate">
        <thirstRateFactorOffsets>
          <li>0.5</li>
          <li>0.6</li>
          <li>0.6</li>
          <li>0.6</li>
          <li>0.6</li>
        </thirstRateFactorOffsets>
      </li>
    </modExtensions>
  </HediffDef>

  <HediffDef>
    <defName>Mizu_DrankSeaWater</defName>
    <label>drank sea water</label>
    <description>Seawater contains too much salt, and drinking it can cause electrolyte imbalance and affects organs' ability to filter blood.</description>
    <scenarioCanAdd>true</scenarioCanAdd>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <initialSeverity>0.001</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>30000</min>
          <max>30000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.95</postFactor>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <postFactor>0.85</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>Mizu_IcecreamHeadache</defName>
    <label>Icecream headache</label>
    <description>Eating frozen things too fast can cause a nasty headache.</description>
    <scenarioCanAdd>true</scenarioCanAdd>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <initialSeverity>0.001</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>2500</min>
          <max>2500</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.95</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>Mizu_Nursed</defName>
    <label>nursed</label>
    <description>?</description>
    <scenarioCanAdd>true</scenarioCanAdd>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
    <initialSeverity>0.001</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>60000</min>
          <max>60000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>