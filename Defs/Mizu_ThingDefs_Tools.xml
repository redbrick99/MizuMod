<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ツール Tools -->
  <ThingDef ParentName="UnfinishedBase">
    <defName>Mizu_UnfinishedTool</defName>
    <label>unfinished tool</label>
    <graphicData>
      <texPath>Things/Item/Unfinished/UnfinishedWeapon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
  </ThingDef>
  
  <ThingDef Name="Mizu_ToolBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Beauty>-1</Beauty>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>1</stackLimit>
    <thingCategories>
      <li>Mizu_Tools</li>
    </thingCategories>
    <alwaysHaulable>true</alwaysHaulable>
    <comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>
    <pathCost>15</pathCost>
    <resourceReadoutPriority>Last</resourceReadoutPriority>
    <drawGUIOverlay>true</drawGUIOverlay>
  </ThingDef>
  
  <ThingDef ParentName="Mizu_ToolBase">
    <defName>Mizu_Mop</defName>
    <label>Mop</label>
    <description>A tool for cleaning. Allows to clean more cleanly on the artifical floors.</description>
    <graphicData>
      <texPath>Things/Item/Mizu_Mop</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <MarketValue>10</MarketValue>
      <WorkToMake>2500</WorkToMake>
      <Mass>0.5</Mass>
    </statBases>
    <costList>
      <Cloth>15</Cloth>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>5</costStuffCount>
    <recipeMaker>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Uranium</li>
          <li>Gold</li>
          <li>Silver</li>
          <li>Steel</li>
          <li>Plasteel</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <unfinishedThingDef>Mizu_UnfinishedTool</unfinishedThingDef>
    </recipeMaker>
    <comps>
      <li Class="MizuMod.CompProperties_WaterTool">
        <useWorkType>
          <li>Mop</li>
        </useWorkType>
        <supplyWorkType>
          <li>Mizu_Drawing</li>
          <li>Mizu_Cleaning</li>
        </supplyWorkType>
        <maxWaterVolume>1</maxWaterVolume>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="Mizu_ToolBase">
    <defName>Mizu_Towel</defName>
    <label>Towel</label>
    <description>A tool for nursing. Allows pawn to nurse patients and help them recover from disease.</description>
    <graphicData>
      <texPath>Things/Item/Mizu_Towel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>10</MarketValue>
      <WorkToMake>2500</WorkToMake>
      <Mass>0.5</Mass>
    </statBases>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <costStuffCount>15</costStuffCount>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>DevilstrandCloth</li>
          <li>Hyperweave</li>
          <li>Synthread</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
    <comps>
      <li Class="MizuMod.CompProperties_WaterTool">
        <useWorkType>
          <li>Nurse</li>
        </useWorkType>
        <supplyWorkType>
          <li>Mizu_Drawing</li>
          <li>Doctor</li>
        </supplyWorkType>
        <maxWaterVolume>0.5</maxWaterVolume>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="Mizu_ToolBase">
    <defName>Mizu_WateringPot</defName>
