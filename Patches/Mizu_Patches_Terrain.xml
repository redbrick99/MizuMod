<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- 水地形にaffordancesが無い場合、空のaffordancesを追加 -->
  <Operation Class="PatchOperationConditional">
    <xpath>*/TerrainDef[contains(defName, "Water")]/affordances</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>*/TerrainDef[contains(defName, "Water")]</xpath>
      <value>
        <affordances/>
      </value>
    </nomatch>
  </Operation>
  
  <Operation Class="PatchOperationConditional">
    <xpath>*/TerrainDef[contains(defName, "Marsh")]/affordances</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>*/TerrainDef[contains(defName, "Marsh")]</xpath>
      <value>
        <affordances>
          <li>Light</li>
	</affordances>
      </value>
    </nomatch>
    <match Class="PatchOperationAdd">
      <xpath>*/TerrainDef[contains(defName, "Marsh")]/affordances</xpath>
      <value>
        <li>Light</li>
      </value>
    </match>
  </Operation>
  
  <Operation Class="PatchOperationConditional">
    <xpath>*/TerrainDef[defName = "Marsh"]/affordances</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>*/TerrainDef[defName = "Marsh"]</xpath>
      <value>
        <affordances>
          <li>Light</li>
	</affordances>
      </value>
    </nomatch>
    <match Class="PatchOperationAdd">
      <xpath>*/TerrainDef[defName = "Marsh"]/affordances</xpath>
      <value>
        <li>Light</li>
      </value>
    </match>
  </Operation>
  
  <Operation Class="PatchOperationConditional">
    <xpath>*/TerrainDef[defName = "Mud"]/affordances</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>*/TerrainDef[defName = "Mud"]</xpath>
      <value>
        <affordances>
          <li>Light</li>
	</affordances>
      </value>
    </nomatch>
    <match Class="PatchOperationAdd">
      <xpath>*/TerrainDef[defName = "Mud"]/affordances</xpath>
      <value>
        <li>Light</li>
      </value>
    </match>
  </Operation>
  
